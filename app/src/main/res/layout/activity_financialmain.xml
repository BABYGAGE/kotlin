<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinancialmainActivity">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <!-- 상단바-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="240dp"
        android:background="@color/_bg__intro_ek2_color"
        android:gravity="top"
        app:layout_constraintBottom_toTopOf="@+id/iv_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="2dp">

            <TextView
                android:id="@+id/babygage"
                android:layout_width="127dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|center"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="BABYGAGE"
                android:textColor="@color/babygage_color"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="62dp"
                android:layout_height="53dp"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/babygage_ek10"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/detailBox"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="@+id/detailBox"
        app:layout_constraintTop_toTopOf="@+id/detailBox" />

    <TextView
        android:id="@+id/moneyDetails"
        android:layout_width="189.5dp"
        android:layout_height="40.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="Today's expenditure and income"
        android:textColor="@color/babygage_color"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/___expenditure___income"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <TextView
        android:id="@+id/descriptionTxt"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_marginEnd="16dp"
        android:text=": Expenditure\n: Income"
        android:textColor="@color/babygage_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/detalBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"
        app:layout_constraintVertical_bias="0.35" />

    <View
        android:id="@+id/detailBox"
        android:layout_width="374dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rectangle_4_ek1_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/today_s_expenditure_details_ek1"
        app:layout_constraintTop_toBottomOf="@+id/moneyDetails" />


    <!-- this is upload button-->
    <Button
        android:id="@+id/takePictureBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:alpha="0.60000002384186"
        android:background="@drawable/_rectangle_15_shape"
        android:text="Import receipt"
        android:textColor="#000000"
        android:textSize="13dp"
        app:backgroundTint="@color/rectangle_14_ek1_color"
        app:layout_constraintBottom_toTopOf="@+id/bottombar"
        app:layout_constraintEnd_toEndOf="@+id/detailBox"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="@+id/detailBox"
        app:layout_constraintTop_toBottomOf="@+id/detailBox"
        app:layout_constraintVertical_bias="0.649" />

    <!-- this is fixed bottom bar -->
    <LinearLayout
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@drawable/rectangle_1_ek1_shape"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.996">

        <Button
            android:id="@+id/mypageBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/vector_ek28"
            app:backgroundTint="#FFFFFF"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/householdBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/_vector_ek58"
            android:contentDescription="vector_ek5"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/household_ledger_ek2"
            app:layout_constraintEnd_toStartOf="@+id/financial_btn"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rectangle_1_ek1"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/financialBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-5dp"
            android:background="@drawable/vector_ek34"
            app:backgroundTint="#FFFFFF"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/settingsBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="55dp"
            android:background="@drawable/vector_ek35"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_1_ek1"
            app:layout_constraintHorizontal_bias="0.907"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>